{block content}

<h1 class="title--page">Návody</h1>


{control filterForm, $search, $category, $difficulty}

    <section class="row filter__result">
        <div class="filter__loader"></div>
        {ifset $tutorials[0]}
            {foreach $tutorials as $tutorial}
                {include ../Components/tutorial.latte, tutorial => $tutorial}
            {/foreach}
        {else}
            <div class="text-center">
                Žádný návod nevyhovuje vašim požadavkům :(
            </div>
        {/ifset}
    </section>

{import ../Components/pagination.latte}

{if $paginator->getLastPage() > 1}
    {include pagination}
{/if}