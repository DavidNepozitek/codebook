{block title}{ifset $tutorial}{$tutorial->getTitle()}{/ifset}{/block}
{block content}


    <div class="all-tutorials"><a n:href="Tutorial:default" class="all-tutorials__link"><i class="fa fa-caret-left all-tutorials__arrow" aria-hidden="true"></i> Všechny návody</a></div>
    {ifset $tutorial}
    <article class="article article--detail">
        <div class="article__wrapper">
            <div class="article__wrapper--bottom">
                <div class="article__wrapper--difficulty">
                    {for $i = 0; $i <= $tutorial->getDifficulty(); $i++}
                        <i class="fa fa-cog article__icon article__icon--active" title="Obtížnost" aria-hidden="true"></i>
                    {/for}
                    {for $i = 2; $i > $tutorial->getDifficulty(); $i--}
                        <i class="fa fa-cog article__icon" title="Obtížnost" aria-hidden="true"></i>
                    {/for}
                    <span title="Počet zhlédnutí" class="article__likes">{$tutorial->getSeenCount()}</span>
                    <i class="fa fa-eye article__eye" title="Počet zhlédnutí" aria-hidden="true"></i>
                </div>
            </div>
            <h2 class="article__title">{$tutorial->getTitle()}</h2>

        </div>
        <h3 class="article__tags">zařazeno do<span class="article__category">
                {foreach $tutorial->getTags() as $tag} {$tag->getName()} {sep}&bull;{/sep}{/foreach}
            </span>
        </h3>
        <p class="article__perex">{$tutorial->getPerex()}</p>
        <div class="article__line"></div>
        <div id="tutorial-source">
            {$tutorial->getContent()|noescape}
        </div>
    </article>

            {else}

            <article class="article article--detail" style="padding-top: 40px">
                <div class="text-center">Požadovaný návod se nepodařilo najít :(</div>
             </article>

        {/ifset}


